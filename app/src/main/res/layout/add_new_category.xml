<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/newCategory"
        android:layout_width="216dp"
        android:layout_height="49dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ConfirmCategory"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="@color/SecondColor"
        app:layout_constraintBottom_toBottomOf="@+id/newCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newCategory"
        app:layout_constraintTop_toTopOf="@+id/newCategory"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/newCategory"
        app:layout_constraintStart_toStartOf="@+id/newCategory"
        app:layout_constraintTop_toBottomOf="@+id/newCategory" />
</androidx.constraintlayout.widget.ConstraintLayout>